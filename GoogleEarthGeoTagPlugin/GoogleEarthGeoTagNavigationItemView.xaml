             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="navigationButton" Grid.Column="1" Width="30" Height="20" Margin="2,0,0,0" Click="navigationButton_Click" ToolTip="Geotag">
            <Image Source="pack://application:,,,/GoogleEarthGeoTagPlugin;component/Resources/Icons/geotag.ico" />          
        </Button>
    </Grid>
</UserControl>
