<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="MediaViewer.Search.SearchView" 
             mc:Ignorable="d" 
             d:DesignWidth="300" d:DesignHeight="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="queryTextBox" Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Query}" VerticalAlignment="Stretch"
			ToolTip="Query" KeyDown="queryTextBox_KeyDown"/>
        <Button x:Name="searchButton" Grid.Column="1" VerticalAlignment="Stretch" ToolTip="Search" HorizontalAlignment="Stretch" Command="{Binding SearchCommand}" CommandParameter="{Binding Query}">
            <Image Source="pack://application:,,,/Resources/Icons/searchblack.ico"/>
        </Button>
        <xctk:DropDownButton Name="DropDownButton" Grid.Column="2" Content="Options">
            <xctk:DropDownButton.DropDownContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Name="allMediaCheckBox" Content="All Media"
                              IsChecked="{Binding AllMedia}"/>
                    <CheckBox Grid.Row="1" Name="videoOnlyCheckBox" Content="Video Only"
                              IsChecked="{Binding VideoOnly}"/>
                    <CheckBox Grid.Row="2" Name="imagesOnlyCheckBox" Content="Images Only"
                              IsChecked="{Binding ImagesOnly}"/>
                    <Separator Grid.Row="3"/>
                    <CheckBox  Grid.Row="4" Name="recurseSubDirectoriesCheckBox" Content="Recurse Subdirectories"
                              IsChecked="{Binding RecurseSubDirectories}"/>
                </Grid>
            </xctk:DropDownButton.DropDownContent>
        </xctk:DropDownButton>
    </Grid>
</UserControl>
