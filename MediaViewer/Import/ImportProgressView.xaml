<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Progress="clr-namespace:MediaViewer.Progress" x:Class="MediaViewer.Import.ImportProgressView"
        Title="Import" Height="350" Width="520" Icon="/MediaViewer;component/Resources/Icons/Import.ico">
    <Grid>
        <Progress:ProgressControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                  TotalProgress="{Binding TotalProgress}" TotalProgressMax="{Binding TotalProgressMax}"
                                  ItemProgress="{Binding ItemProgress}" ItemProgressMax="100" 
                                  ItemInfo="{Binding ItemInfo}"
                                  InfoMessages="{Binding InfoMessages}"
                                  CancelCommand="{Binding CancelCommand}" OkCommand="{Binding OkCommand}"/>       
    </Grid>
</Window>
