<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                   
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
                    xmlns:ImagePanel="clr-namespace:MediaViewer.ImagePanel" 
                    xmlns:VideoPanel="clr-namespace:MediaViewer.VideoPanel"
                    >
    <ImagePanel:DegreesConverter x:Key="degreesConverter"/>

    <ImagePanel:ScaleConverter x:Key="scaleConverter"/>

    <VideoPanel:TimeConverter x:Key="timeConverter"/>

    <LinearGradientBrush x:Key="flat3DBorderBrush"
                         StartPoint="0.499,0" EndPoint="0.501,1">
        <GradientStop Color="#FFF" Offset="0" />
        <GradientStop Color="#DDD" Offset="0.01" />
        <GradientStop Color="#AAA" Offset="0.99" />
        <GradientStop Color="#888" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="imageGridBackgroundColorBrush" Color="#FFD4D0C8"/>
    <SolidColorBrush x:Key="imageGridSelectedColorBrush" Color="DarkRed"/>
    <BitmapImage x:Key="loadingImage" UriSource="/Resources/Images/loading1.gif"/>
    <BitmapImage x:Key="errorImage" UriSource="/Resources/Images/error.png"/>
</ResourceDictionary>