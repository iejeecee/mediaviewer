<Window x:Name="AboutWindow1" x:Class="MediaViewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="240" Width="240" MaxWidth="320" MaxHeight="240" WindowStyle="ToolWindow" MinWidth="320" MinHeight="240">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="{Binding ElementName=AboutWindow1, Path=ProgramInfo}" HorizontalAlignment="Stretch" Margin="0,40,0.333,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" />
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="74" RenderTransformOrigin="0.461,0.4" HorizontalContentAlignment="Center" Click="OkButton_Click" Grid.Row="1"/>
        <Label Content="{Binding ElementName=AboutWindow1, Path=CopyrightInfo}" HorizontalAlignment="Stretch" Margin="0,69,0.333,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
